<div class="create_header">

  <div class="create_header_left_div">
    <%= form_tag search_post_path, :method => 'get', :id => "search_post" do %>
      <div class="post_url_div">www.postif.com/<%= text_field_tag :search, params[:search], :id => 'post_url', :placeholder => 'type a page for your url here' %></div>
      <div class="url_ok_div"><span id="url_ok">&nbsp;</span></div>
      <%= hidden_field_tag 'valid_url', 'false', :id => 'valid_url' %>
    <% end %>
  </div>
  
  <div class="create_header_right_div">
    <script type="text/javascript">
      
        google_ad_client = "ca-pub-1677570997517028"; 
        google_ad_slot = "4494111324";
        google_ad_width = 468;
        google_ad_height = 65;
    </script>
    <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
    </script>
  </div>
  
</div>

<div class="ipaint_navigation">
  <div><%= link_to 'New Page', reset_page_path(), :class => 'pop' %></div>
  <div><%= link_to 'Open Page', open_page_path(), :class => 'pop' %></div>
  <!-- See jquery with class 'save_canvas' for saving method -->
  <div><%= link_to 'Save', save_page_path(), :class => 'pop' %></div>
  <div><%= link_to 'Preview', '#' %></div>
  <div><%= link_to 'Post', post_page_path(), :class => 'pop' %></div>
  <div><%= link_to 'Share', share_page_path(), :class => 'pop' %></div>
  <div><%= link_to 'Renew', renew_page_path(), :class => 'pop' %></div>
  <div><%= link_to 'Delete', delete_page_path(), :class => 'pop' %></div>
</div>

<div>
  <%= render 'shared/iPaint_canvas' %>
</div>


